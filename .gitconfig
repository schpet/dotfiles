[user]
	email = peter@peterschilling.org
[alias]
  b = branch
  c = commit --verbose
  ca = commit --all --verbose
  co = checkout
  current-branch = !sh -c 'git rev-parse --abbrev-ref HEAD' -
  di = diff
  s = status
  dmb = "!git co master && git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"

[push]
  default = current
[diff]
  algorithm = patience
[grep]
  extendRegexp = true
  lineNumber = true
[web]
  browser = open
[merge]
  tool = vimdiff
[core]
	excludesfile = ~/.cvsignore
	pager = less -S
[merge]
	summary = true
