[user]
	email = peter@peterschilling.org
[alias]
	a = add
	aa = add --all
	agg = !agg-git
	amend = commit --amend --verbose
	b = branch
	br = for-each-ref --sort=-committerdate refs/heads/ --format='%(HEAD) %(color:green)%(refname:short)%(color:reset) - %(color:yellow)%(objectname:short)%(color:reset) - %(color:magenta)%(authorname)%(color:reset) (%(committerdate:relative))'
	bo = for-each-ref --count=30 --sort=-committerdate refs/heads/ --format='%(refname:short)'
	c = commit --verbose
	ca = commit --all --verbose
	co = checkout
	current-branch = !sh -c 'git rev-parse --abbrev-ref HEAD' -
	di = diff
	dis = diff --staged
	dia = diff HEAD
	s = status
	ls = "! git status --porcelain | sed s/^...//"
	lsv = "! $EDITOR $(git ls | selecta)"
	us = reset HEAD
	unstage = reset HEAD
	dmb = "!git co master && git branch --merged | grep -v '\\*' | grep -v 'production' | xargs -n 1 git branch -D && git remote prune origin"
  track = "!git commit --allow-empty -m \"Tagging tracker story [#${1#'#'}]\n\nhttps://www.pivotaltracker.com/story/show/${1#'#'}\" #"
  deliver = "!git commit --allow-empty -m \"Deliver tracker story [delivers #${1#'#'}]\n\nhttps://www.pivotaltracker.com/story/show/${1#'#'}\" #"
  finish = "!git commit --allow-empty -m \"Finish tracker story [finishes #${1#'#'}]\n\nhttps://www.pivotaltracker.com/story/show/${1#'#'}\" #"

	yesterday = "!git log --format=summary \
		--after $(date -v -1d -v0M -v0S -v0H +%Y-%m-%dT%H:%M:%S%z) \
		--before $(date -v0M -v0S -v0H +%Y-%m-%dT%H:%M:%S%z)"

	today = "!git log --format=summary \
		--after $(date -v0M -v0S -v0H +%Y-%m-%dT%H:%M:%S%z)"
	ctags = "!.git/hooks/ctags"
  rebase = rebase --keep-empty
[push]
	default = current
[diff]
	algorithm = patience
	noprefix = true
[grep]
	extendRegexp = true
	lineNumber = true
[web]
	browser = open
[merge]
	tool = vimdiff
	summary = true
[core]
	excludesfile = ~/.cvsignore
	pager = less -S
	editor = vim
[pretty]
	summary = - %C(yellow)%an%Creset %s
	summaryd = - %ad %s
[init]
	templatedir = ~/.git_template
[diff "exif"]
	textconv = exiftool
