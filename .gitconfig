[user]
	email = peter@peterschilling.org
[alias]
	a = add
	aa = add --all
	agg = !agg-git
	amend = commit --amend --verbose
	b = branch
	br = for-each-ref --sort=-committerdate refs/heads/ --format='%(HEAD) %(color:green)%(refname:short)%(color:reset) - %(color:yellow)%(objectname:short)%(color:reset) - %(color:magenta)%(authorname)%(color:reset) (%(committerdate:relative))'
	bo = for-each-ref --count=30 --sort=-committerdate refs/heads/ --format='%(refname:short)'
	c = commit --verbose
	ca = commit --all --verbose
	co = checkout
	current-branch = !sh -c 'git rev-parse --abbrev-ref HEAD' -
	di = diff
	dis = diff --staged
	dia = diff HEAD
	s = status
	ls = "!git status --porcelain | sed s/^...//"
	us = reset HEAD
	unstage = reset HEAD
	dmb = "!git co master && git branch --merged | grep -v '\\*' | grep -v 'production' | xargs -n 1 git branch -D && git remote prune origin"

	yesterday = "!git log --format=summary \
		--after $(date -v -1d -v0M -v0S -v0H +%Y-%m-%dT%H:%M:%S%z) \
		--before $(date -v0M -v0S -v0H +%Y-%m-%dT%H:%M:%S%z)"

	today = "!git log --format=summary \
		--after $(date -v0M -v0S -v0H +%Y-%m-%dT%H:%M:%S%z)"
	ctags = "!.git/hooks/ctags"
[push]
	default = current
[diff]
	algorithm = patience
[grep]
	extendRegexp = true
	lineNumber = true
[web]
	browser = open
[merge]
	tool = vimdiff
[core]
	excludesfile = ~/.cvsignore
	pager = less -S
	editor = vim
[merge]
	summary = true
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[pretty]
	summary = - %s
	summaryd = - %ad %s
[init]
	templatedir = ~/.git_template
