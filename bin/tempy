#!/usr/bin/env bash

# Create timestamp
timestamp=$(date +%Y%m%d-%H%M%S)

# Create temp directory
tmpdir="/tmp/tempy/tempy-${timestamp}"
mkdir -p "$tmpdir"

# Initialize jj with git colocated repo
cd "$tmpdir"
jj git init --colocate

# Print path only
echo "$tmpdir"

# Change to the directory
cd "$tmpdir"