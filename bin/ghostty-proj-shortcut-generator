#!/usr/bin/env bash

# @raycast.schemaVersion 1
# @raycast.title Generate ghostty-proj raycast shortcuts
# @raycast.mode inline

for category in code tanooki
do
    directories=$(find ~/$category -maxdepth 1 -mindepth 1 -type d)
    shortcut_dir="$HOME/shortcuts/ghostty-proj/$category"
    rm -rf "$shortcut_dir"
    mkdir -p "$shortcut_dir"

    for dir in $directories
    do
        bn=$(basename $dir)
        shortcut_path="$shortcut_dir/$bn"
        shortcut_dir=$(dirname "$shortcut_path")
        cat << EOF > "$shortcut_path"
#!/usr/bin/env bash

# generated from ghostty-proj-shortcut-generator

# @raycast.schemaVersion 1
# @raycast.title ghostty: $category/$bn
# @raycast.mode silent

export PATH="\$HOME/.cargo/bin:\$PATH"
ghostty-proj $dir
EOF
        chmod +x "$shortcut_path"
    done
done