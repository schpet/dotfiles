// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "load_direnv": "direct",
  "agent": {
    "profiles": {
      "write-test": {
        "name": "Write test",
        "tools": {
          "copy_path": true,
          "create_directory": true,
          "delete_path": true,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": true,
          "move_path": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "terminal": true,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": true,
        "context_servers": {}
      }
    },
    "play_sound_when_agent_done": true,
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-latest"
    },
    "version": "2"
  },
  "edit_predictions": {
    "mode": "subtle",
    "enabled_in_text_threads": false
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "show_edit_predictions": true,
  "use_autoclose": false,
  "active_pane_modifiers": {
    "inactive_opacity": 0.85
  },
  "tabs": {
    "git_status": true,
    "file_icons": true
  },
  "tab_bar": {
    "show_tab_bar_buttons": false
  },
  "theme": "solarizedgruv",
  "buffer_font_size": 13,
  "vim_mode": true,
  "format_on_save": "off",
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "file_types": {
    "Markdown": ["markdown", "mdoc"],
    "Shell Script": [".env.*"]
  },
  // "soft_wrap": "bounded",
  // "preferred_line_length": 100,
  "languages": {
    "Markdown": {
      "show_edit_predictions": false,
      "soft_wrap": "bounded",
      "preferred_line_length": 100
    },
    "TSX": {
      "code_actions_on_format": {
        "source.organizeImports": true,
        "source.addMissingImports": true
      }
    },
    "TS": {
      "code_actions_on_format": {
        "source.organizeImports": true,
        "source.addMissingImports": true
      }
    },
    "Ruby": {
      "language_servers": ["ruby-lsp", "!solargraph", "!rubocop"],
      "formatter": "language_server"
    }
  },
  "lsp": {
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": false
        },
        "formatter": "rubyfmt"
      },
      "settings": {
        "use_bundler": true
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "classFunctions": ["cva", "cx"]
      }
    }
  },
  "terminal": {
    "dock": "bottom",
    "option_as_meta": true,
    "font_fallbacks": ["Iosevka Nerd Font Mono"],
    "font_family": "Zed Mono Extended",
    "alternate_scroll": "on",
    "blinking": "on",
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "context_servers": {
    // "figma": {
    //   "command": {
    //     "path": "npx",
    //     "args": ["-y", "mcp-remote", "http://127.0.0.1:3845/sse"],
    //     "env": null
    //   },
    //   "settings": {}
    // },
    "mcp-server-context7": {
      "settings": {
        "default_minimum_tokens": "10000"
      }
    }
    // "linear-tool": {
    //   "command": {
    //     "path": "npx",
    //     "args": ["-y", "mcp-remote", "https://mcp.linear.app/sse"],
    //     "env": null
    //   },
    //   "settings": {}
    // }
  }
}
